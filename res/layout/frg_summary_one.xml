<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".FrgSummaryOne">

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <!-- Overview -->

    <TextView
        android:text="Overview"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

      <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"        
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFE9E0DB">
      <TextView
        android:text="@string/s_mortgage_name_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>

      <TextView
        android:id="@+id/s_mortgage_name"                                 
        android:layout_height="wrap_content"
        android:layout_weight="@integer/summary_right_weight"
        android:textSize="11sp"
        android:layout_width="0dp"/>    
      </LinearLayout>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFF9F6F4">
      <TextView
        android:text="@string/s_mortgage_amount_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>

      <TextView
        android:id="@+id/s_mortgage_amount"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
      </LinearLayout>
     
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFE9E0DB">

      <TextView
        android:text="@string/s_mortgage_term_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>

      <TextView
        android:id="@+id/s_mortgage_term"               
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
    </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFF9F6F4">

      <TextView
        android:text="@string/mortgage_interest_rate_input"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>     

      <TextView
        android:id="@+id/s_mortgage_interest_rate"            
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
      
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFE9E0DB">

      <TextView
        android:text="@string/s_mortgage_downpayment_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>     

      <TextView
        android:id="@+id/s_mortgage_downpayment"            
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    </LinearLayout>        

    <!-- Totals -->

    <TextView
        android:text="Total (cumulative)"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

      <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:textSize="11sp"
        android:background="#FFE9E0DB">
      <TextView
        android:text="@string/s_mortgage_total_payment_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>

      <TextView
        android:id="@+id/s_mortgage_total_payment"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
      </LinearLayout>
    
      <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFF9F6F4">
      <TextView
        android:text="@string/s_mortgage_total_interests_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
                
      <TextView
        android:id="@+id/s_mortgage_total_interests"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
      </LinearLayout>
    
      <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:textSize="11sp"
        android:background="#FFE9E0DB">
      <TextView
        android:text="@string/s_mortgage_total_insurance_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
                
      <TextView
        android:id="@+id/s_mortgage_total_insurance"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
      </LinearLayout>
    
      <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:textSize="11sp"
        android:background="#FFF9F6F4">
      <TextView
        android:text="@string/s_mortgage_total_pmi_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
                
      <TextView
        android:id="@+id/s_mortgage_total_pmi"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
      </LinearLayout>    
    
      <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFE9E0DB">
      <TextView
        android:text="@string/s_mortgage_total_property_tax_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
                
      <TextView
        android:id="@+id/s_mortgage_total_property_tax"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
     </LinearLayout>        
        
    </LinearLayout>        
    
    <!-- Monthly -->

    <TextView
        android:text="Monthly payments"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFE9E0DB">
      <TextView
        android:text="@string/s_mortgage_monthly_payment_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
                
      <TextView
        android:id="@+id/s_mortgage_monthly_payment"                          
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFF9F6F4">
      <TextView
        android:text="@string/s_mortgage_monthly_insurance_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
                
      <TextView
        android:id="@+id/s_mortgage_monthly_insurance"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFE9E0DB">
      <TextView
        android:text="@string/s_mortgage_monthly_pmi_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
                
      <TextView
        android:id="@+id/s_mortgage_monthly_pmi"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>  
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:background="#FFF9F6F4">
      <TextView
        android:text="@string/s_mortgage_monthly_tax_title"               
        android:layout_weight="@integer/summary_left_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
                
      <TextView
        android:id="@+id/s_mortgage_monthly_tax"                         
        android:layout_weight="@integer/summary_right_weight"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>            
    
  </LinearLayout>
</ScrollView>
   