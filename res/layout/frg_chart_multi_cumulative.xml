<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FrgChartMultiCumulative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/frg_chart_multi" >
        
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"    
        android:gravity="bottom|center_horizontal"
        android:text="Principal payment">     
     </TextView>
    
     <LinearLayout
        android:id="@+id/chart_outstanding_loan_principal"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_weight="10"        
        android:layout_height="0dp"
        android:layout_margin="0dp">
     </LinearLayout>       

     <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"    
        android:gravity="bottom|center_horizontal"
        android:text="Interest payment">     
     </TextView>
    
     <LinearLayout
        android:id="@+id/chart_outstanding_loan_interest"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_weight="10"        
        android:layout_height="0dp"
        android:layout_margin="0dp">
     </LinearLayout>       
     
</LinearLayout>